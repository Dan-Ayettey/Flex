<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/grid_item"
        android:layout_width="138dp"
        android:layout_height="136dp"
        android:layout_marginTop="16dp"
        android:contentDescription="@string/after_symbol"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.054"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/grid_item_color"
        android:layout_width="50dp"
        android:layout_height="45dp"
        android:contentDescription="@string/after_symbol"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.465"
        app:layout_constraintStart_toEndOf="@+id/grid_item"
        app:layout_constraintTop_toBottomOf="@+id/grid_add_to_cart" />

    <Button
        android:id="@+id/grid_add_to_cart"
        android:layout_width="50dp"
        android:layout_height="45dp"
        android:layout_marginTop="16dp"
        android:contentDescription="@string/after_symbol"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.465"
        app:layout_constraintStart_toEndOf="@+id/grid_item"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/grid_zoom_item"
        android:layout_width="50dp"
        android:layout_height="45dp"
        android:contentDescription="@string/after_symbol"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.465"
        app:layout_constraintStart_toEndOf="@+id/grid_item"
        app:layout_constraintTop_toBottomOf="@+id/grid_item_color" />
</androidx.constraintlayout.widget.ConstraintLayout>